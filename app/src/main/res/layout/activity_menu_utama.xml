<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/stashijau"
    tools:context=".menu_utama">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/image_slider"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            app:iss_auto_cycle="true"
            app:iss_period="1000"
            app:iss_delay="1000"
            app:iss_text_align="CENTER" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SMART MANNEQUIN"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="118dp"
                android:layout_marginLeft="250dp"
                android:background="@drawable/raspi" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mikrokontroler"
                android:paddingLeft="15dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

            <android.widget.Button
                android:id="@+id/buttonmenu"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="80dp"
                android:background="@drawable/custom_button2"
                android:text="OPEN"
                android:textSize="11dp"
                android:textColor="@color/stashijau" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/adxl"
                android:layout_marginLeft="250dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sensor"
                android:paddingLeft="15dp"
                android:layout_marginTop="50dp"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

            <android.widget.Button
                android:id="@+id/buttonmenu6"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/custom_button2"
                android:text="OPEN"
                android:textSize="11dp"
                android:textColor="@color/stashijau" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="250dp"
                android:background="@drawable/logopindad" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MITRA"
                android:paddingLeft="15dp"
                android:layout_marginTop="50dp"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

            <android.widget.Button
                android:id="@+id/buttonmenu2"
                android:onClick="showBottomSheet"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/custom_button2"
                android:text="OPEN"
                android:textSize="11dp"
                android:textColor="@color/stashijau" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/anoaa"
                android:layout_marginLeft="250dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Halaman"
                android:paddingLeft="15dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monitoring"
                android:paddingLeft="15dp"
                android:layout_marginTop="60dp"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

            <!-- Add the missing forward slash (/) here -->
            <android.widget.Button
                android:id="@+id/buttonmenu3"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/custom_button2"
                android:text="OPEN"
                android:textSize="11dp"
                android:textColor="@color/stashijau" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/jalur"
                android:layout_marginLeft="250dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jalur Pengujian"
                android:paddingLeft="15dp"
                android:layout_marginTop="50dp"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"/>

            <android.widget.Button
                android:id="@+id/buttonmenu4"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/custom_button2"
                android:text="OPEN"
                android:textSize="11dp"
                android:textColor="@color/stashijau" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/manekinanoa"
                android:layout_marginLeft="250dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hasil Pengujian"
                android:paddingLeft="15dp"
                android:textColor="@color/black"
                android:layout_marginTop="50dp"
                android:textSize="25dp"
                android:textStyle="bold" />

            <android.widget.Button
                android:id="@+id/buttonmenu5"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/custom_button2"
                android:text="OPEN"
                android:textSize="11dp"
                android:textColor="@color/stashijau" />

        </androidx.cardview.widget.CardView>



    </LinearLayout>

</ScrollView>